using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace arithmeticcsharp
{
    class Program
    {
        static void Main(string[] args)
        {
            int a, b, c, d, e, f, g;
            Console.WriteLine("enter a number");
            a = int.Parse(Console.ReadLine());
            Console.WriteLine("enter a number");
            b = int.Parse(Console.ReadLine());
            c = a + b;
            d = a - b;
            e = a * b;
            f = a / b;
            Console.WriteLine(c);
            Console.WriteLine(d);
            Console.WriteLine(e);
            Console.WriteLine(f);
            // Console.WriteLine(c);//
            Console.ReadLine();
        }
    }
}
